@model ShowMasterApp.Core.DTOs.EventDTO

<!DOCTYPE html>
<html>
<head>
    <title>Create Event</title>
</head>
<body>
    <h1>Create Event</h1>

    @if (Model != null)
    {
        <form method="post">
            <label for="Name">Event Name:</label>
            <input type="text" id="Name" name="Name" value="@Model.Name" required />
            <br />
            <label for="Date">Event Date:</label>
            <input type="date" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" required />
            <br />
            <button type="submit">Create</button>
        </form>
    }
    else
    {
        <p>Error: The event data is not available.</p>
    }
</body>
</html>
